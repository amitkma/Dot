<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="android:textColorPrimary">#FFF</item>



    </style>


    <style name="AppTheme.NoActionBar.Login" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="android:windowBackground">@color/colorAccent_light2</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>


    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Loginwithfbgoogle" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="android:windowBackground">@color/colorAccent_light2</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>


    </style>

    <style name="MyToolBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edittext_login">
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:editTextColor">#fff</item>


        <item name="android:textSize">18sp</item>

        <item name="android:textColor">#fff</item>


    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="login_button">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/buttons_login_state</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="edittext_signup">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColorHint">#8000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/edittext_login_state</item>
    </style>

    <style name="textview_explore">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="card_imageview_buttons">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:alpha">.54</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="icon_edittext">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:alpha">.54</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="linearlayout_create_trend_edittext">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="edittext_create_trend">
        <item name="android:textColorHint">#3000</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="@android:statusBarColor">#30000000</item>
    </style>

    <style name="MaterialLoginTheme" parent="AppTheme"></style>
    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/login_button_back</item>
        <item name="android:textColorHint">@color/login_button_back</item>
        <item name="colorControlActivated">@color/material_login_register_color</item>
        <item name="colorControlHighlight">@color/material_login_register_color</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
