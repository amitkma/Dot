<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Salo" />

<android.support.v7.widget.CardView
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"
        >
        <TextView
            android:id="@+id/confirm_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/03/2016 at 15:45"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/confirm_barber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_appointment_date"
            android:text="Azad Bhawan"
            android:textColor="@color/primary_text"
            android:textSize="24sp"

            />
        <View
            android:id="@+id/spacer_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/confirm_barber"
            android:layout_marginTop="16dp"
            android:background="@color/secondary_text_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spacer_1"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/confirm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spacer_1"
            android:layout_marginTop="16dp"
            android:text="Amit Kumar"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/confirm_username"
            android:layout_marginTop="16dp"
            android:text="No.of Services"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/number_services1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/confirm_username"
            android:layout_marginTop="16dp"
            android:text="2"
            android:textColor="@color/secondary_text"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/number_services1"
            android:layout_marginTop="16dp"
            android:text="Duration"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/number_services1"
            android:layout_marginTop="16dp"
            android:text="30 mins"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text"
            android:textSize="16dp" />
        <View
            android:id="@+id/spacer_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/duration"
            android:layout_marginTop="16dp"
            android:background="@color/secondary_text_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spacer_2"
            android:layout_marginTop="16dp"
            android:text="Total price"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/confirm_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spacer_2"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Rs. 20/-"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <View
            android:id="@+id/spacer_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/confirm_price"
            android:layout_marginTop="16dp"
            android:background="@color/secondary_text_background"
            />
        <TextView
            android:id="@+id/confirm_pin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spacer_3"
            android:layout_marginTop="24dp"
            android:text="PIN"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/confirm_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spacer_3"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-condensed"
            android:text="98542"
            android:textColor="@color/primary_text"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
    <Button
        android:id="@+id/close_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_ripple"
        android:text="CLOSE"
        android:textColor="#FFF" />
</RelativeLayout>