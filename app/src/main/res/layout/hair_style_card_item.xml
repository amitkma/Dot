<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="top"
    android:scaleType="centerCrop"
    android:src="@drawable/hair_bun" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <TextView
            android:id="@+id/hair_style_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="The Man Bun"
            android:textColor="@color/primary_text"/>
        <TextView
            android:id="@+id/hair_style_price"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hair_style_title"
            android:layout_alignBottom="@+id/hair_style_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="$ 50"
            android:textColor="@color/secondary_text" />
        <TextView
            android:id="@+id/hair_style_place"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hair_style_title"
            android:layout_marginTop="8dp"
            android:text="Azad Bhawan" />
        <TextView
            android:id="@+id/hair_style_description"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hair_style_place"
            android:layout_marginTop="16dp"
            android:text="The man bun is shaping up to be the biggest hairstyle trend of 2015. With big names like Orlando Bloom and Brad Pitt now sporting their own versions of the man bun."
            android:textColor="@color/secondary_text"/>
        <View
            android:id="@+id/divider_space"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/hair_style_description"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            android:background="@color/secondary_text" />
        <TextView
            android:id="@+id/availability"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_space"
            android:layout_marginTop="16dp"
            android:text="Today's availablitiy"
            />
        <LinearLayout
            android:id="@+id/timings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/availability"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/access_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:alpha="0.54"
            android:src="@drawable/ic_access_time_black_24dp"
            />
        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="5:30PM"
            android:textColor="@color/secondary_text"
          />
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_back"

                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="7:30PM"
                android:textColor="@color/primary_text"
                />
            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="9:00PM"
                android:textColor="@color/secondary_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/timings_layout"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:alpha="0.54"
                android:padding="12dp"
                android:src="@drawable/ic_favorite_black_24dp" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:alpha="0.54"
                android:padding="12dp"
                android:src="@drawable/ic_comment_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timings_layout"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/hair_style_add_to_cart"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="ADD TO CART"
            android:textColor="@color/accent" />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.54"
            android:padding="10dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
             />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>